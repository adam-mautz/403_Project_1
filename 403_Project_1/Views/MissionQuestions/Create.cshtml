@model _403_Project_1.Models.MissionQuestions

@{
    ViewBag.Title = "Add Question";
}

<h2>Ask a Question</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
        <h4>MissionQuestions</h4>
        <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MISSION_ID)
    @Html.HiddenFor(model => model.USER_ID)

    @Html.LabelFor(model => model.QUESTION, htmlAttributes: new { @class = "control-label col-md-2" })
    @Html.EditorFor(model => model.QUESTION, new { htmlAttributes = new { @class = "form-control" } })

    @Html.ValidationMessageFor(model => model.QUESTION, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.ANSWER)
                
    <input type="submit" value="Create" class="btn btn-default" />
       
}

